/*ARENAS TORRES JUAN EDUARDO
#include <stdio.h>
#define PI 3.1416

int main() {
    float radio, area, circ;

    printf("Ingresa el radio del circulo: ");
    scanf("%f", &radio);

    area = PI * radio * radio;
    circ = 2 * PI * radio;

    printf("Area: %.2f\n", area);
    printf("Circunferencia: %.2f\n", circ);

    return 0;
}
